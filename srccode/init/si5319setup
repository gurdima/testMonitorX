#!/bin/bash

I2CBUS=0
CHIP_ADDR=104
echo "Setting Si5319 I2C registers"

i2cset -y $I2CBUS $CHIP_ADDR 0x00 0x14
i2cset -y $I2CBUS $CHIP_ADDR 0x02 0xA2
i2cset -y $I2CBUS $CHIP_ADDR 0x03 0x15
i2cset -y $I2CBUS $CHIP_ADDR 0x05 0xED
i2cset -y $I2CBUS $CHIP_ADDR 0x06 0x2D
i2cset -y $I2CBUS $CHIP_ADDR 0x08 0x00
i2cset -y $I2CBUS $CHIP_ADDR 0x0a 0x00
i2cset -y $I2CBUS $CHIP_ADDR 0x0b 0x40
i2cset -y $I2CBUS $CHIP_ADDR 0x13 0x2C
i2cset -y $I2CBUS $CHIP_ADDR 0x14 0x3E
i2cset -y $I2CBUS $CHIP_ADDR 0x16 0xDF
i2cset -y $I2CBUS $CHIP_ADDR 0x17 0x1F
i2cset -y $I2CBUS $CHIP_ADDR 0x18 0x3F
i2cset -y $I2CBUS $CHIP_ADDR 0x19 0x00
i2cset -y $I2CBUS $CHIP_ADDR 0x1f 0x00
i2cset -y $I2CBUS $CHIP_ADDR 0x20 0x00
i2cset -y $I2CBUS $CHIP_ADDR 0x21 0x07
i2cset -y $I2CBUS $CHIP_ADDR 0x28 0xC0
i2cset -y $I2CBUS $CHIP_ADDR 0x29 0x01
i2cset -y $I2CBUS $CHIP_ADDR 0x2a 0x03
i2cset -y $I2CBUS $CHIP_ADDR 0x2b 0x00
i2cset -y $I2CBUS $CHIP_ADDR 0x2c 0x00
i2cset -y $I2CBUS $CHIP_ADDR 0x2d 0x0C
i2cset -y $I2CBUS $CHIP_ADDR 0x2e 0x00
i2cset -y $I2CBUS $CHIP_ADDR 0x2f 0x00
i2cset -y $I2CBUS $CHIP_ADDR 0x30 0x0C
i2cset -y $I2CBUS $CHIP_ADDR 0x83 0x1F
i2cset -y $I2CBUS $CHIP_ADDR 0x84 0x02
i2cset -y $I2CBUS $CHIP_ADDR 0x8a 0x0F
i2cset -y $I2CBUS $CHIP_ADDR 0x8b 0xFF

i2cset -y $I2CBUS $CHIP_ADDR 0x88 0x40

exit 0

